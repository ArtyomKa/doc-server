# Doc Server Environment Configuration

# Storage Paths
DOC_SERVER_STORAGE_PATH=~/.doc-server

# Vector Database (handled via storage path structure)
DOC_SERVER_CHROMA_DB_PATH=~/.doc-server/chroma.db
DOC_SERVER_MODELS_PATH=~/.doc-server/models
DOC_SERVER_LIBRARIES_PATH=~/.doc-server/libraries
DOC_SERVER_CONFIG_FILE=~/.doc-server/config.yaml

# Embedding Model
DOC_SERVER_EMBEDDING_MODEL=all-MiniLM-L6-v2
DOC_SERVER_EMBEDDING_DEVICE=cpu
DOC_SERVER_EMBEDDING_BATCH_SIZE=32

# Search Configuration
DOC_SERVER_DEFAULT_TOP_K=10
DOC_SERVER_SEARCH_MIN_SCORE=0.5
DOC_SERVER_KEYWORD_BOOST=2.0

# File Processing (Merged list: code + docs + configs)
DOC_SERVER_MAX_FILE_SIZE=1048576  # 1MB in bytes
DOC_SERVER_ALLOWED_EXTENSIONS=.py,.pyi,.c,.cpp,.h,.hpp,.md,.rst,.txt,.json,.yaml,.yml,.toml,.cfg,.ini,.conf

# Logging
DOC_SERVER_LOG_LEVEL=INFO
DOC_SERVER_LOG_FORMAT=json

# MCP Server
DOC_SERVER_MCP_TRANSPORT=stdio
DOC_SERVER_MCP_DEBUG=false

# Note: The above environment variables are loaded with DOC_SERVER_ prefix.
# For example, DOC_SERVER_STORAGE_PATH becomes the storage_path setting.
# YAML configuration in ~/.doc-server/config.yaml overrides these defaults.
