# Doc Server Environment Configuration

# Storage Paths
DOC_SERVER_STORAGE_PATH=~/.doc-server
DOC_SERVER_DATA_PATH=~/.doc-server/data
DOC_SERVER_CACHE_PATH=~/.doc-server/cache

# Vector Database
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=~/.doc-server/vector_db
VECTOR_DB_COLLECTION=default

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Search Configuration
DEFAULT_TOP_K=10
SEARCH_MIN_SCORE=0.5
KEYWORD_BOOST=2.0

# File Processing
MAX_FILE_SIZE=1048576  # 1MB in bytes
ALLOWED_EXTENSIONS=.py,.txt,.md,.rst,.json,.yaml,.yml,.toml,.cfg,.ini,.conf

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# MCP Server
MCP_TRANSPORT=stdio
MCP_DEBUG=false
